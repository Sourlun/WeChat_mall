@import "./style/iconfront.wxss";

/* 小程序里面不支持通配符 ‘*’ */
page,view,text,swiper,swiper-item,image,navigator {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/* 变量 */
page{
    /* 定义主题颜色 */
    --themeColor: 	#FF1493;
    
    /* 定义统一字体大小
        假设设计稿的大小为 375px
        1px = 2rpx
        14px = 28rpx
    */
    font-size: 28rpx;

}

image{
    width: 100%;
}